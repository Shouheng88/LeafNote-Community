        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
    </style>

    <style name="AppTheme.Branded" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/cold_theme_background</item>
        <item name="android:windowBackground">@drawable/branded_background</item>
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
