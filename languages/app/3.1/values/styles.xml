    <style name="TakePhoto" parent="Base.AppTheme.Dark">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

    <style name="Base.AppTheme.Dark.Pink" parent="Base.AppTheme.Dark">
        <item name="colorPrimary">@color/pink_theme_primary</item>
        <item name="colorAccent">@color/pink_theme_accent</item>
    </style>

    <style name="Base.AppTheme.Christmas" parent="Base.AppTheme.Dark">
        <item name="colorPrimary">@color/christmas_primary</item>
